<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.VAMS" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/vivid_yellow</item>
        <item name="colorPrimaryVariant">@color/dark_yellow</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/very_dark_gray</item>
        <item name="colorSecondaryVariant">@color/very_dark_gray</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="android:toolbarStyle">@style/toolbar</item>
    </style>

    <style name="dialogBackground">
        <item name="android:windowBackground">@color/not_transparent</item>
    </style>

    <style name="textInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/very_light_gray</item>
        <item name="hintTextColor">@color/very_dark_gray_50</item>
    </style>

    <style name="textInputEditText">
        <item name="hintTextColor">@color/very_dark_gray_50</item>
        <item name="android:textColor">@color/very_dark_gray</item>
        <item name="fontFamily">@font/circularstd_book</item>
        <item name="android:textSize">@dimen/dimen_14sp</item>
    </style>

    <style name="button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textSize">@dimen/dimen_14sp</item>
        <item name="cornerRadius">@dimen/dimen_5dp</item>
        <item name="android:insetTop">@dimen/dimen_0dp</item>
        <item name="android:insetBottom">@dimen/dimen_0dp</item>
        <item name="fontFamily">@font/ttcommons_bold</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="button.ThemedButton">
        <item name="android:backgroundTint">@color/button_state</item>
        <item name="android:textColor">@color/button_text_state</item>
    </style>

    <style name="textButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">@dimen/dimen_14sp</item>
        <item name="fontFamily">@font/ttcommons_bold</item>
    </style>

    <style name="toolbarText" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="background">@color/white</item>
    </style>

    <style name="tabLayoutText" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/ttcommons_bold</item>
        <item name="android:textSize">@dimen/dimen_14sp</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="ShapeAppearanceCardView" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/dimen_10dp</item>
        <item name="cornerSizeTopRight">@dimen/dimen_10dp</item>
        <item name="cornerSizeBottomLeft">@dimen/dimen_0dp</item>
        <item name="cornerSizeBottomRight">@dimen/dimen_0dp</item>
    </style>

    <style name="ShapeAppearanceDetailCardView" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/dimen_8dp</item>
    </style>

    <style name="DetailCardView" parent="Widget.MaterialComponents.CardView">
        <item name="strokeColor">@color/very_light_gray</item>
        <item name="strokeWidth">2dp</item>
        <item name="cardElevation">@dimen/dimen_0dp</item>
        <item name="cardMaxElevation">@dimen/dimen_0dp</item>
        <item name="android:layout_marginStart">@dimen/dimen_36dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_36dp</item>
    </style>

    <!--    <style name="AppBottomAppBar" parent="Widget.MaterialComponents.BottomAppBar">-->
    <!--        <item name="strokeColor">@color/very_light_gray</item>-->
    <!--        <item name="strokeWidth">2dp</item>-->
    <!--        <item name="backgroundTint">@color/white</item>-->
    <!--    </style>-->
    <style name="formTextHint">
        <item name="fontFamily">@font/ttcommons_regular</item>
        <item name="android:textSize">@dimen/dimen_14sp</item>
        <item name="textColor">@color/very_dark_gray_50</item>
        <item name="android:layout_marginStart">@dimen/dimen_8dp</item>
    </style>

    <style name="formEditTextHint">
        <item name="fontFamily">@font/ttcommons_regular</item>
        <item name="android:textSize">@dimen/dimen_14sp</item>
        <item name="textColor">@color/very_dark_gray_50</item>
        <item name="android:layout_height">@dimen/dimen_50dp</item>
        <item name="android:paddingStart">@dimen/dimen_16dp</item>
    </style>

    <style name="formEditText">
        <item name="fontFamily">@font/ttcommons_regular</item>
        <item name="android:textSize">@dimen/dimen_14sp</item>
        <item name="textColor">@color/edit_text_state</item>
        <item name="android:paddingStart">@dimen/dimen_8dp</item>
    </style>

    <style name="textInputLayout.ExposedDroppedDown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/very_light_gray</item>
        <item name="hintTextColor">@color/very_dark_gray_50</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>
</resources>